<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.jzbwlkj.leifeng.ui.activity.ModifyPhoneActivity">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sp_16"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/shoujihao"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:padding="14dp"
            android:text="手机号码："
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_12" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入您的手机号码"
            android:inputType="number"
            android:paddingBottom="14dp"
            android:paddingRight="14dp"
            android:paddingTop="14dp"
            android:layout_marginRight="@dimen/sp_16"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sp_16"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/yanzhengma"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:padding="14dp"
            android:text="验证码："
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_12" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入您的验证码"
            android:inputType="number"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:layout_marginRight="@dimen/sp_16"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_12"
            android:text="获取验证码"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/tv_button"
        style="@style/redButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="34dp"
        android:text="确认" />
</LinearLayout>
