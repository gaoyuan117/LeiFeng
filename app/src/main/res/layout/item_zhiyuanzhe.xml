<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_leave_word_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/avatar_default" />

        <TextView
            android:id="@+id/img_leave_word_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_leave_word_avatar"
            android:text="昵称"
            android:textColor="@color/global"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_leave_word_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_leave_word_name"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/img_leave_word_avatar"
            android:text="2018.1.18 13:45"
            android:textColor="@color/light_gray"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:textColor="@color/text_red"
            android:textSize="@dimen/sp_12"
            android:text="已通过"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_gray_stroke_selector"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp"
                android:text="同意"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_refuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/sp_12"
                android:background="@drawable/white_gray_stroke_selector"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:paddingTop="8dp"
                android:text="拒绝"
                android:textColor="@color/text_red"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line_color" />

</LinearLayout>
