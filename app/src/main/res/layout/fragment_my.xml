<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/global"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_my_avatar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/avatar_default" />

                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_my_avatar"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_my_namer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/wode"
                        android:drawablePadding="10dp"
                        android:text=""
                        android:textSize="13sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_my_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/img_my_avatar"
                    android:drawableLeft="@mipmap/phone"
                    android:drawablePadding="10dp"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_my_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_my_phone"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/img_my_avatar"
                    android:drawableLeft="@mipmap/xin"
                    android:drawablePadding="10dp"
                    android:text="0小时"
                    android:textColor="@color/global" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="#eeeeee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tv_my_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/jibenxinxi"
                    android:gravity="center"
                    android:text="基本信息"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_my_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/zhiyuanmingpian"
                    android:gravity="center"
                    android:text="志愿名片"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_my_launch_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/fabuhuodong"
                    android:gravity="center"
                    android:text="发布活动"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_my_publish_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/fabuxiangmu"
                    android:gravity="center"
                    android:text="发布项目"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#eeeeee" />

        <TextView
            android:id="@+id/tv_my_ac_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/huodongguanli"
            android:drawablePadding="16dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="活动管理"
            android:textSize="13sp" />

        <include layout="@layout/layout_line" />

        <TextView
            android:id="@+id/tv_my_project_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/xaingmuguanli"
            android:drawablePadding="16dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="项目管理"
            android:textSize="13sp" />

        <include layout="@layout/layout_line" />

        <TextView
            android:id="@+id/tv_manager_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/khgl"
            android:drawablePadding="16dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="志愿者管理"
            android:textSize="13sp" />

        <include layout="@layout/layout_line" />

        <TextView
            android:id="@+id/tv_my_project_leave_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/liuyanshenhe"
            android:drawablePadding="16dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="留言审核"
            android:textSize="13sp" />

        <include layout="@layout/layout_line" />

        <TextView
            android:id="@+id/tv_my_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/jiarudeduiwu"
            android:drawablePadding="16dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="加入的队伍"
            android:textSize="13sp" />

        <include layout="@layout/layout_line" />

        <TextView
            android:id="@+id/tv_my_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/yibaominghuodong"
            android:drawablePadding="16dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="已报名活动"
            android:textSize="13sp" />

        <include layout="@layout/layout_line" />

        <TextView
            android:id="@+id/tv_my_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/pro2"
            android:drawablePadding="16dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="已报名项目"
            android:textSize="13sp" />

        <include layout="@layout/layout_line" />

        <TextView
            android:id="@+id/tv_my_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/xiugaimima"
            android:drawablePadding="16dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="修改密码"
            android:textSize="13sp" />

        <include layout="@layout/layout_line" />

        <TextView
            android:id="@+id/tv_my_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/about_us"
            android:drawablePadding="16dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="关于我们"
            android:textSize="13sp" />

        <include layout="@layout/layout_line" />

        <TextView
            android:id="@+id/tv_my_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/xitongshezhi"
            android:drawablePadding="16dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="系统设置"
            android:textSize="13sp" />

        <include layout="@layout/layout_line" />
    </LinearLayout>


</ScrollView>
