<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_circle_shape">

   <TextView
       android:id="@+id/tv_tt"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="10dp"
       android:gravity="center_horizontal"
       android:textSize="14dp"
       android:textColor="@color/white"
       android:text="版本更新"/>

   <LinearLayout
       android:id="@+id/ll_no"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:visibility="gone"
       android:layout_below="@+id/tv_tt"
       android:orientation="vertical">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="120dp"
          android:gravity="center"
          android:paddingRight="20dp"
          android:paddingLeft="20dp"
          android:textSize="14dp"
          android:textColor="@color/white"
          android:text="当前已是最新版本"/>



   <View
       android:layout_width="match_parent"
       android:layout_height="0.6dp"
       android:background="@color/white"/>

      <TextView
          android:id="@+id/tv_close"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="14dp"
          android:gravity="center"
          android:textColor="@color/white"
          android:textSize="12dp"
          android:text="关  闭"/>


   </LinearLayout>

   <LinearLayout
       android:id="@+id/ll_update"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/tv_tt"
       android:orientation="vertical">
      <TextView
          android:id="@+id/tv_old_version"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:visibility="gone"
          android:paddingRight="20dp"
          android:paddingLeft="20dp"
          android:textSize="12dp"
          android:textColor="@color/white"
          android:text="当前版本：1.0"/>

         <TextView
             android:id="@+id/tv_new_version"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:visibility="gone"
             android:paddingRight="20dp"
             android:paddingLeft="20dp"
             android:layout_marginTop="6dp"
             android:textSize="12dp"
             android:textColor="@color/white"
             android:text="新版本：1.1"/>

      <TextView
          android:id="@+id/tv_new_info"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:visibility="gone"
          android:lineSpacingExtra="4dp"
          android:paddingRight="20dp"
          android:paddingLeft="20dp"
          android:layout_marginTop="6dp"
          android:textSize="12dp"
          android:textColor="@color/white"
          android:text="更新信息：更新了最新版本"/>

      <com.jzbwlkj.leifeng.view.ArrowDownloadButton
          android:id="@+id/adb_button"
          android:layout_width="match_parent"
          android:layout_height="120dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"/>

      <View
          android:layout_width="match_parent"
          android:layout_height="0.6dp"
         android:background="@color/white"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
         <TextView
             android:id="@+id/tv_no"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:padding="14dp"
             android:gravity="center"
             android:textSize="12dp"
             android:textColor="@color/white"
             android:text="稍后再说"/>

         <View
             android:layout_width="0.6dp"
             android:layout_height="match_parent"
            android:background="@color/white"/>

         <TextView
             android:id="@+id/tv_ok"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:padding="14dp"
             android:gravity="center"
             android:textSize="12dp"
             android:textColor="@color/white"
             android:text="立即更新"/>
      </LinearLayout>
   </LinearLayout>



</RelativeLayout>
