<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.jzbwlkj.leifeng.ui.activity.SearchKeyWordsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/global"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dp"
            android:layout_height="46dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/back"/>
        </RelativeLayout>


        <EditText
            android:id="@+id/et_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="6dp"
            android:background="@drawable/circle_white_little_shape"
            android:drawableLeft="@mipmap/search"
            android:drawablePadding="10dp"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_black"
            android:hint="请输入关键字"/>

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="50dp"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:text="搜索"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_history_recoder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_bg"
        android:text="历史记录"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/sp_12"
        android:padding="10dp"/>


        <ListView
            android:id="@+id/lv_recoder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:divider="@color/line_color"
            android:dividerHeight="0.6dp">

        </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/line_color"/>
        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/sp_12"
            android:textColor="@color/text_red"
            android:textSize="@dimen/sp_12"
            android:text="清除历史记录"/>
    </LinearLayout>


</LinearLayout>
